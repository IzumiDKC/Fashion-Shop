@model FashionShopDemo.Models.Order

@{
    @if (User.IsInRole("Admin"))
    {    
        ViewData["Title"] = "Delete";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

}
@if (User.IsInRole("Admin"))
{
    <div class="container mt-5">
        <h1 class="text-danger">Xác nhận Xóa</h1>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">Đơn hàng</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        Ngày đặt hàng:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.OrderDate)
                    </dd>
                    <dt class="col-sm-3">
                        Tổng giá:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.TotalPrice)
                    </dd>
                    <dt class="col-sm-3">
                        Địa chỉ nhận hàng:
                    </dt>
                    <dd class="col-sm-9">
                        @if (string.IsNullOrEmpty(Model.ShippingAddress))
                        {
                            <i class="fas fa-times text-danger"></i>
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.ShippingAddress)
                        }
                    </dd>

                    <dt class="col-sm-3">
                        Ghi chú:
                    </dt>
                    <dd class="col-sm-9">
                        @if (string.IsNullOrEmpty(Model.Notes))
                        {
                            <i class="fas fa-times text-danger"></i>
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.Notes)
                        }
                    </dd>
                    <dt class="col-sm-3">
                        Mã khách hàng:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.ApplicationUser.Id)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách</a>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>  
}
else
{
    ViewData["Title"] = "Truy Cập Trái Phép";

    <h2 style="color: red; text-align: center"><strong>Quyền Truy Cập Không Hợp Lệ</strong></h2>
    <script>
        setTimeout(function () {
            console.log("Đã chờ xong!");
            window.location.href = "/Home";
        }, 3000);
    </script>
}<style>
     /* Thiết lập font chữ */
     body {
         font-family: Arial, sans-serif;
     }

     /* Phần tử tiêu đề */
     h1 {
         color: #dc3545; /* Màu đỏ */
     }

     /* Phần tử thẻ card */
     .card {
         border: 1px solid #dee2e6; /* Đường viền */
         border-radius: 0.25rem; /* Bo góc */
         box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); /* Bóng đổ */
     }

     /* Phần tử nút xóa */
     .btn-danger {
         background-color: #dc3545; /* Màu nền đỏ */
         border-color: #dc3545; /* Màu viền đỏ */
     }

         .btn-danger:hover {
             background-color: #c82333; /* Màu nền đỏ nhạt khi di chuột */
             border-color: #bd2130; /* Màu viền đỏ nhạt khi di chuột */
         }

     /* Phần tử nút quay lại */
     .btn-secondary {
         background-color: #6c757d; /* Màu nền xám */
         border-color: #6c757d; /* Màu viền xám */
     }

         .btn-secondary:hover {
             background-color: #5a6268; /* Màu nền xám nhạt khi di chuột */
             border-color: #545b62; /* Màu viền xám nhạt khi di chuột */
         }

</style>